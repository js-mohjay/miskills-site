---
import Header from "../components/layout/Header.astro";
import background from "../assets/background.svg";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    <!-- Primary Meta -->
    <title>MISKILLS</title>
    <meta name="title" content="MISKILLS"/>
    <meta
            name="description"
            content="MISKILLS is a modern platform for skill development, learning, and career growth."
    />

    <!-- SEO -->
    <meta name="robots" content="index, follow"/>
    <meta name="googlebot" content="index, follow"/>
    <link rel="canonical" href="https://miskills.in/"/>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="https://miskills.in/"/>
    <meta property="og:title" content="MISKILLS"/>
    <meta
            property="og:description"
            content="Build skills, learn smarter, and grow your career with MISKILLS."
    />
    <meta property="og:image" content="https://miskills.in/og-image.png"/>

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image"/>
    <meta property="twitter:url" content="https://miskills.in/"/>
    <meta property="twitter:title" content="MISKILLS"/>
    <meta
            property="twitter:description"
            content="A modern platform for skill development and learning."
    />
    <meta property="twitter:image" content="https://miskills.in/og-image.png"/>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>

    <!-- Astro -->
    <meta name="generator" content={Astro.generator}/>
</head>

<body>
<div>
    <img
            id="background"
            src={background.src}
            alt=""
            fetchpriority="high"
    <main
            class="w-full min-h-screen"
    />
    <main class="w-full border border-black min-h-screen px-6 md:px-10 flex flex-col">
        <Header/>
        <slot/>
    </main>
</div>
</body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    #background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        filter: blur(100px);
    }
</style>
