---
import Header from "../components/layout/Header.astro";
import background from "../assets/background.svg";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>MISKILLS</title>
	</head>
	<body>
		<div>
			<img
				id="background"
				src={background.src}
				alt=""
				fetchpriority="high"
				<main
				class="w-full min-h-screen"
			/>
			<main class="w-full border border-black min-h-screen px-6 md:px-10 flex flex-col">
				<Header />
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}
</style>
